<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bezch"
    android:orientation="vertical"
    tools:context="izenka.hfad.com.bookstore.main_menu.view.MainMenuActivity">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/lightBlue"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/search3"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/search"
        android:imeOptions="flagNoEnterAction"
        android:padding="4dp"
        android:textStyle="italic"
        app:bootstrapSize="lg"
        app:roundedCorners="true" />

    <TextView
        android:id="@+id/tvRunningLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boarders3"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="5dp"
        android:scrollHorizontally="true"
        android:scrollbarFadeDuration="80"
        android:singleLine="true"
        android:text="@string/hello_message"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="2dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/btnForeign"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginEnd="2.5dp"
                android:background="@drawable/foreign_back"
                android:fontFamily="casual"
                android:textAppearance="@android:style/TextAppearance.Widget.TextView"
                android:textColor="@color/colorAccent"
                android:textStyle="bold|italic"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnKid"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginEnd="2.5dp"
                android:background="@drawable/kid_back"
                android:fontFamily="casual"
                android:textAppearance="@android:style/TextAppearance.Widget.TextView"
                android:textColor="@color/colorAccent"
                android:textStyle="bold|italic"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnBusiness"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:background="@drawable/business_back"
                android:fontFamily="casual"
                android:textAppearance="@android:style/TextAppearance.Widget.TextView"
                android:textColor="@color/colorAccent"
                android:textStyle="bold|italic"
                android:typeface="monospace" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnFiction"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginEnd="2.5dp"
                android:background="@drawable/fiction_back"
                android:fontFamily="casual"
                android:textAppearance="@android:style/TextAppearance.Widget.TextView"
                android:textColor="@color/colorAccent"
                android:textStyle="bold|italic"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnStudy"

                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginEnd="2.5dp"
                android:background="@drawable/study_back"
                android:fontFamily="casual"
                android:textAppearance="@android:style/TextAppearance.Widget.TextView"
                android:textColor="@color/colorAccent"
                android:textStyle="bold|italic"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnNonfiction"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:background="@drawable/nonfiction_back"
                android:fontFamily="casual"
                android:textAppearance="@android:style/TextAppearance.Widget.TextView"
                android:textColor="@color/colorAccent"
                android:textStyle="bold|italic"
                android:typeface="monospace" />
        </TableRow>
    </TableLayout>

