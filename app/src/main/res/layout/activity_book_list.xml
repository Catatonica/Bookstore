<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bezch2"
    android:orientation="vertical"
    tools:context="izenka.hfad.com.bookstore.controller.BookListActivity">

    <include layout="@layout/titlebar" />

    <TextView
        android:id="@+id/tvKindOfBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/darkBrown"
        android:textSize="20sp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/bootstrapEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@color/lightBlue"
        android:cursorVisible="true"
        android:drawableLeft="@drawable/search3"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/searchInCategory"
        android:imeOptions="flagNoEnterAction"
        android:onClick="onSearchClick"
        android:textStyle="italic"
        app:bootstrapSize="lg"
        app:roundedCorners="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/boarders">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"></GridLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
