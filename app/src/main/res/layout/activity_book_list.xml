<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bezch"
    tools:context="izenka.hfad.com.bookstore.BookListActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="30sp"
            android:text="Bookstore"
            android:textColor="@color/color2"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imgBtnShopCart"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_gravity="right|center"
            android:backgroundTint="@color/darkBrown"
            android:onClick="onShopCartClick"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/basket" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvKindOfBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/darkBrown"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        app:roundedCorners="true"
        android:drawableLeft="@drawable/search3"
        android:drawablePadding="10dp"
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@color/lightBlue"
        android:hint=" Поиск по категории"
        android:textStyle="italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                >
            </GridLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
