<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bezch2"
    android:orientation="vertical"
    tools:context="izenka.hfad.com.bookstore.BookListActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color9">

        <Button
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/return_back"
            android:backgroundTint="@color/bootstrap_brand_secondary_fill"
            android:onClick="onReturnBackClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="60dp"
            android:text="@string/bookstore"
            android:textColor="@color/color2"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imgBtnShopCart"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_gravity="right|center"
            android:backgroundTint="@color/color9"
            android:onClick="onShopCartClick"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/basket" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvKindOfBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/darkBrown"
        android:textSize="20sp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@color/lightBlue"
        android:drawableLeft="@drawable/search3"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/searchInCategory"
        android:textStyle="italic"
        app:roundedCorners="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/boarders"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"></GridLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
