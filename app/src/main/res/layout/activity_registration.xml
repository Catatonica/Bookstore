                        android:hint="*"
                        android:paddingStart="15dp"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1" />
                </TableRow>

                <TableRow>

                    <TextView android:text="Дом: " />

                    <EditText
                        android:layout_span="2"
                        android:id="@+id/etHouse"
                        android:hint="*"
                        android:paddingStart="15dp"
                        android:inputType="number"
                        android:maxLines="1" />
                </TableRow>

                <TableRow>

                    <TextView android:text="Квартира: " />

