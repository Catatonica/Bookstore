                        android:paddingStart="15dp"
                        android:maxLines="1" />

                    <ImageButton
                        android:id="@+id/btnSelectOnMap"
                        android:background="@drawable/ic_add_location_black_24dp"/>
                </TableRow>

                <TableRow>

                    <TextView android:text="Город: " />

